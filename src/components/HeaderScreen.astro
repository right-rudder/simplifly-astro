---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

const { content } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif,webp}"
);
if (!images[content.imagePath]) {
  throw new Error(
    `"${content.imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp,HEIC}"`
  );
}
---

<header
  class="relative lg:mt-0 min-h-screen font-sans h-fit bg-gray-800 text-white flex items-center justify-center overflow-hidden"
>
  <Image
    src={images[content.imagePath]()}
    alt={content.imageAlt}
    width={1920}
    loading={"eager"}
    class="absolute inset-0 -z-0 object-cover object-center w-full h-full animate-slow-zoom contrast-125"
  />
  <div
    class="absolute bg-gradient-to-b from-white/20 to-white/20 w-full h-full z-0"
  >
  </div>
  <!-- Text -->
  <div
    class="text-white mt-20 lg:mt-0 text-center lg:text-left z-10 flex flex-col items-end gap-4 px-5 w-[80vw] h-full lg:pt-28 justify-center"
  >
    <h1
      class="text-5xl md:text-6xl uppercase outlined-text drop-shadow-md leading-3 lg:text-8xl font-title xl:text-8xl text-right font-bold max-w-3xl text-sky-950"
      set:html={content.headerH1}
    />
    <p
      class="text-lg lg:text-2xl mt-3 outlined-text font-semibold text-slate-800 font-sans tracking-wide text-right max-w-5xl"
      set:html={content.paragraph}
    />
    <div
      class="mt-6 flex flex-wrap justify-center align-middle items-center gap-6 z-10"
    >
      {
        content.buttons.map((btn) => (
          <a
            href={btn.link}
            class={`${btn.primary ? "btn-primary" : "btn-white"} w-full md:w-auto`}
          >
            <span class="drop-shadow-sm">{btn.name}</span>
          </a>
        ))
      }
    </div>
  </div>
</header>
