---
import ProgramCard from "./ProgramCard.astro";

const { content } = Astro.props;
---

<section
  class="bg-gradient-to-br from-primary-900 via-primary-950 to-slate-950 py-16 lg:py-24"
>
  <div class="mx-auto max-w-9xl px-6 lg:px-8">
    <div class="text-center mb-12">
      {
        content.upperHeading && (
          <h3 class="section-upper">{content.upperHeading}</h3>
        )
      }
      {content.heading && <h2 class="section-title">{content.heading}</h2>}
      {
        content.heading && (
          <p class="section-description">{content.description}</p>
        )
      }
    </div>
    <div class="mx-auto max-w-6xl">
      <ul role="list" class="flex flex-wrap justify-center gap-6">
        {
          content.cards.map((program) => (
            <ProgramCard
              style="w-full md:w-[45%]"
              title={program.title}
              imagePath={program.imagePath}
              imageAlt={program.imageAlt}
              link={program.link}
              linkText={program.linkText}
              description={program.description}
            />
          ))
        }
      </ul>
    </div>
  </div>
</section>
