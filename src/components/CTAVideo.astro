---
import { YouTube } from "astro-embed";
const { video, data } = Astro.props;
---

<div class="bg-sky-950 flex flex-col md:flex-row items-stretch min-h-screen py-16">
  <div class="lg:w-1/2 aspect-video">
    <YouTube
      id={video.videoId}
      class="w-full h-full object-cover"
      params="start=0"
      posterQuality="max"
    />
  </div>

  <div class="w-full md:w-1/2 px-8 md:px-12 py-12 flex items-center">
    <div class="mx-auto max-w-2xl space-y-8">
      <h2 class="text-lg font-bold text-sky-300 uppercase tracking-wide">{data.header}</h2>
      <p class="text-4xl md:text-5xl font-semibold text-white leading-tight">
        {video.title}
      </p>
      <p class="text-lg md:text-xl text-gray-200 leading-relaxed">{data.text}</p>
    </div>
  </div>
</div>

