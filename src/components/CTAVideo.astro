---
import { YouTube } from "astro-embed";
const { video, data } = Astro.props;
---

<div class="bg-sky-950">
  <div
    class="flex flex-col lg:flex-row items-stretch py-12 lg:py-8 justify-center gap-20 px-8 max-w-7xl mx-auto"
  >
    <!-- <div class="flex-1 flex justify-center items-center">
      <YouTube
        id={video.videoId}
        class="aspect-video w-full"
        params="start=0"
        posterQuality="max"
      />
    </div> -->
    <iframe
      class="w-full h-full aspect-[9/16] lg:w-1/3 lg:h-full rounded-lg"
      src=`https://www.youtube-nocookie.com/embed/${video.videoId}?start=0`
      title="YouTube video player"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      referrerpolicy="strict-origin-when-cross-origin"
      allowfullscreen
    >
    </iframe>

    <div class="flex-1 flex items-center">
      <div class="mx-auto space-y-8">
        <h2 class="text-lg font-bold text-sky-300 uppercase tracking-wide">
          {data.header}
        </h2>
        <p class="text-4xl md:text-5xl font-semibold text-white leading-tight">
          {video.title}
        </p>
        <p class="text-lg md:text-xl text-gray-200 leading-relaxed">
          {data.text}
        </p>
        <div>
          <a class="btn-primary mt-8" href="/discovery-flight">
            Book a Discovery Flight
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
