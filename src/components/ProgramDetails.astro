---
import programs from "../data/programs";
import { FaCheck } from "react-icons/fa";
import ImageComp from "./ImageComp.astro";

const { program } = Astro.props;
const cta = program.cta;
const faqs = program.faqs;
---
<section >
  <div class="w-full">
    {
      program.upperHeading && (
        <h3 class="mx-auto mt-12 uppercase text-lg lg:text-xl lg:max-w-3xl font-sans text-center font-bold tracking-tight text-sky-400">
          {program.upperHeading}
        </h3>
      )
    }
    {
      program.heading && (
        <h2 class="mx-auto mb-3 text-4xl lg:text-6xl lg:max-w-3xl font-title text-center font-bold tracking-tight text-sky-950">
          {program.heading}
        </h2>
      )
    }
    {
      program.subHeading && (
        <p class="mx-auto mb-12 text-lg max-w-3xl text-center tracking-loose text-gray-900">
          {program.subHeading}
        </p>
      )
    }
  </div>
  <div class="flex gap-12 p-12 py-20 justify-center align-middle">
    <div class="w-1/2 p-12 pr-20 bg-sky-100">
      <h2 class="py-5 text-3xl font-semibold">
        {program.title}
      </h2>
      <p class="pb-12"
        set:html={program.description}
      >
      </p>
      <ul>
        <h2 class="p-5 text-2xl font-semibold">
          Key Points
        </h2>
        {
          program.keyPoints.map((point) => (
            <li class="flex text-lg items-center">
              <FaCheck class:list={"text-xs"} /> &nbsp {point}
            </li>
          ))
        }
      </ul>
    </div>
    <div class="w-1/3">
      <div class="relative bg-medium-blue/90 p-10 flex flex-col gap-10 text-white text-center items-center h-[400px] md:h-[500px] lg:h-[600px] overflow-hidden">
        <ImageComp 
          imagePath="/src/assets/female_pilot_smiling.webp"
          imageAlt="Female pilot smiling"
          loading="lazy"
          class="absolute inset-0 w-full h-full object-cover -z-10"
        />
      
        <h3 class="uppercase font-semibold text-white/70 relative z-10">
          {cta.title}
        </h3>
        <p class="text-3xl font-semibold relative z-10">
          {cta.description}
        </p>
        <a
          class="btn-yellow hover:bg-white hover:text-dark-blue relative z-10" 
          href={cta.button.link}
        >
          {cta.button.name}
        </a>
      </div>
      <div>
        <h3>FAQs</h3>
        <ul>
          {
            faqs.map((q) => (
              <li>
                <h4>
                  {q.question}
                </h4>
                <p>
                  {q.answer}
                </p>
              </li>
            ))
          }
        </ul>
      </div>
    </div>  
  </div>
</section>
