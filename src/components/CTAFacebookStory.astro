---
const { data } = Astro.props;
---

<section class="py-24 px-5 w-full flex flex-col gap-12 justify-center items-stretch md:flex-row">
  <iframe
    src={data.url}
    class="rounded-lg aspect-[9/16] w-full h-full max-h-2xl max-w-xs mx-auto md:mx-0 md:w-1/3"
    scrolling="no"
    frameborder="0"
    allowfullscreen="true"
    allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share"
    allowfullscreen="true"
  >
  </iframe>

  <div class="max-w-4xl flex flex-col justify-center">
    <h2 class="section-title text-left mx-0">{data.title}</h2>
    <p class="section-upper text-left mx-0 mt-4 mb-6 max-w-none">{data.subTitle}</p>
    <p class="text-lg md:text-xl">
      {data.paragraph}
    </p>

    <a class="btn-primary mt-4 block" href={data.cta.url}>{data.cta.text}</a>
  </div>
</section>
