---
import ImageComp from "./ImageComp.astro";

const { cta } = Astro.props;
---

<div class="relative flex flex-col justify-center items-center text-white text-center h-fit lg:h-full overflow-hidden rounded-lg shadow-lg py-6">
        
  <!-- Background Image -->
  <ImageComp 
    imagePath="/src/assets/female_pilot_smiling.webp"
    imageAlt="Female pilot smiling"
    loading="lazy"
    class="absolute inset-0 h-full object-cover object-center -z-10"
  />

  <!-- Dark Overlay for Better Contrast -->
  <div class="absolute inset-0 z-0 bg-sky-700/70"></div>

  <!-- CTA Content -->
  <div class="absolute inset-0 z-10 px-6 flex flex-col gap-5 justify-center items-center">
    <h3 class="uppercase font-semibold text-white/80 tracking-wider">
      {cta.title}
    </h3>
    <p class="text-2xl md:text-3xl font-semibold leading-tight max-w-xl">
      {cta.description}
    </p>
    <a
      class="bg-yellow-400 text-sky-900 font-semibold text-lg md:text-xl hover:bg-white hover:text-sky-900 px-6 py-3 mt-4 w-fit inline-block rounded-md shadow-md transition-all duration-300 transform hover:scale-105"
      href={cta.button.link}
    >
      {cta.button.name}
    </a>  
  </div>

</div>
