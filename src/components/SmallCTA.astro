---
import ImageComp from "./ImageComp.astro";

const { cta } = Astro.props;
---

<div class="relative flex flex-col justify-center items-center text-white text-center h-[400px] md:h-[500px] lg:h-[600px] overflow-hidden rounded-md">
        
  <!-- Background Image -->
  <ImageComp 
    imagePath="/src/assets/female_pilot_smiling.webp"
    imageAlt="Female pilot smiling"
    loading="lazy"
    class="absolute inset-0 h-full object-cover -z-10"
  />
  <div class="absolute inset-0 z-0 bg-sky-600/80" ></div>

  <!-- CTA Content -->
  <div class="absolute inset-0 z-10 px-6 h-full flex flex-col gap-5 justify-center items-center">
    <h3 class="uppercase font-semibold text-white/70">
      {cta.title}
    </h3>
    <p class="text-3xl font-semibold leading-tight">
      {cta.description}
    </p>
    <a
      class="bg-yellow-400 text-sky-700 font-semibold text-xl hover:bg-white hover:text-sky-900 px-6 py-3 mt-4 w-fit inline-block rounded-md transition-all duration-300"
      href={cta.button.link}
    >
      {cta.button.name}
    </a>  
  </div>

</div>
