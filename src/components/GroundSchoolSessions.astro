---
import groundSchoolSessions from "../data/sessions";
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-title font-bold text-sky-900 mb-10">Upcoming Ground School Sessions</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {groundSchoolSessions.map((session) => (
        <div class="border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition duration-200">
          <h3 class="text-xl font-semibold text-sky-800 mb-1">{session.date}</h3>
          <p class="text-gray-600 mb-2">{session.time}</p>

          <ul class="list-disc list-inside text-gray-700 text-sm mb-4">
            {session.topics.map((topic) => (
              <li>{topic}</li>
            ))}
          </ul>

          <span
            class={`inline-block px-3 py-1 text-sm rounded-full ${
              session.status === "Scheduled"
                ? "bg-green-100 text-green-800"
                : "bg-yellow-100 text-yellow-800"
            }`}
          >
            {session.status}
          </span>
          <a href="https://www.flightcircle.com/shop/f97c5d7539a7/4000020629" target="_blank" class="text-blue-600 underline">Sign up here</a>
        </div>
      ))}
    </div>
  </div>
</section>
