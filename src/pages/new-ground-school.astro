---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeaderSmall from "../components/HeaderSmall.astro";
import GroundSchoolSessions from "../components/GroundSchoolSessions.astro";
import CTAContact from "../components/CTAContact.astro";
import contactCTA from "../data/contactCTA";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

import pageData from "../data/ground-school.js";
import groundClassroom from "../assets/happy-visitors-at-simplifly-flight-school-in-mesa-arizona-for-pilot-training.webp";
import pilotStudying from "../assets/group_ground.webp";
---
<BaseLayout
  siteTitle={pageData.pageTitle}
  siteDescription={pageData.pageDescription}
  keywords={pageData.pageKeywords}
>
  <!-- HEADER -->
  <HeaderSmall content={pageData.header} />

  <section class="bg-white py-24">
    <div class="max-w-7xl mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left Text Block -->
      <div>
        <h2 class="text-4xl font-title font-bold text-sky-900 mb-6">
          Join SimpliFly’s In-Person Ground School
        </h2>
        <p class="text-lg text-gray-700 mb-6">
          Whether you’re just getting started or looking to sharpen your skills, our 3-hour ground school sessions give you the knowledge you need to succeed as a pilot. Only $50 per class and open to all student pilots — even if you train elsewhere.
        </p>
        <ul class="text-gray-700 space-y-2 mb-8 list-disc list-inside">
          <li>Led by experienced instructor Dolly</li>
          <li>Focused 3-hour in-person classes</li>
          <li>Key FAA topics like Weather, Airspace, Systems, and more</li>
          <li>Located in Mesa, AZ</li>
        </ul>
        <a href="https://www.flightcircle.com/shop/f97c5d7539a7/4000020629" target="_blank" class="btn-primary text-lg">
          Sign Up Now – $50
        </a>
      </div>
  
      <!-- Right Image -->
      <div class="w-full h-full">
        <Image src={groundClassroom} alt="SimpliFly Ground School students in classroom" class="rounded-xl shadow-lg w-full h-auto object-cover" />
      </div>
    </div>
  </section>
  
  <section class="bg-sky-50 py-24">
    <div class="max-w-7xl mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left Image -->
      <div class="w-full h-full order-last lg:order-first">
        <Image src={pilotStudying} alt="Student pilot studying ground school materials" class="rounded-xl shadow-lg w-full h-auto object-cover" />
      </div>
  
      <!-- Right Text Block -->
      <div>
        <h2 class="text-4xl font-title font-bold text-sky-900 mb-6">
          Learn Anywhere You Are
        </h2>
        <p class="text-lg text-gray-700 mb-6">
          You don’t need to be a SimpliFly student to join. These sessions are perfect for students from other flight schools or future pilots who haven’t committed to a program yet. Walk in with questions, leave with confidence.
        </p>
        <ul class="text-gray-700 space-y-2 list-disc list-inside">
          <li>No enrollment required</li>
          <li>Clear, easy-to-follow instruction</li>
          <li>Open to all levels of experience</li>
        </ul>
      </div>
    </div>
  </section>  

  <GroundSchoolSessions />

  <CTAContact content={contactCTA} />
</BaseLayout>
