---
import { COMPANY_NAME } from "../../consts";
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeaderSmall from "../../components/HeaderSmall.astro";
import ImageComp from "../../components/ImageComp.astro";

import FormJobApplication from "../../components/FormJobApplication.astro";

const pageData = {
  pageTitle: `Join the Team in Mesa, AZ | ${COMPANY_NAME}`,
  pageDescription:
    "Want to be part of the SimpliFly team? Whether you're a CFI, admin, or just passionate about aviation, drop your info and resume — we’ll keep it on file for future opportunities.",
  pageKeywords:
    "flight school jobs Mesa AZ, work at SimpliFly, aviation career Mesa, CFI resume submission, aviation admin job, SimpliFly application",

  // Top Header
  header: {
    stars: false,
    imagePath: "/src/assets/application-form-header-page-mesa-az-flight-school-pilot-training.jpg", // swap with your actual image path
    imageAlt: "SimpliFly team at Falcon Field, Mesa AZ",
    headerH1: `Want to Work With Us?`,
    paragraph:
      "Whether you're a flight instructor, admin, or just passionate about aviation, we’d love to hear from you. Drop your info and resume below — we’ll reach out if something opens up.",
    buttons: [
      {
        name: "Send Your Info",
        link: "#application-form",
        primary: true,
      },
      {
        name: "Contact Us",
        link: "/contact",
        primary: false,
      },
    ],
  },
};

const jobCards = [
  {
    title: "Admin Crew",
    description:
      "Support flight operations, scheduling, and student services from the front office.",
    hiring: false,
    link: "/files/speedway-flight-training-admin-crew-job-description.pdf",
  },
  {
    title: "Flight Crew",
    description:
      "Join our team of Certified Flight Instructors and help train the next generation of pilots.",
    hiring: false,
    link: "/files/speedway-flight-training-flight-crew-job-description.pdf",
  },
];
---

<BaseLayout
  siteTitle={pageData.pageTitle}
  siteDescription={pageData.pageDescription}
  keywords={pageData.pageKeywords}
>
  <HeaderSmall content={pageData.header} />
  <section class="relative mt-8 z-10 text-accent-100 scroll-my-20 lg:scroll-my-28 pt-8 pb-8">
    <div class="max-w-7xl mx-auto px-6">
      <h1 class="text-center text-4xl lg:text-6xl font-sans2 -skew-x-12 font-bold mb-12">Career Opportunities at SimpliFly</h1>
      <div class="flex flex-col lg:flex-row gap-8 justify-center items-center">
        {jobCards.map((card) => (
          <div class="bg-sky-600 text-white max-w-96 h-full p-6 rounded-lg shadow-md flex flex-col justify-between hover:scale-105 transition duration-300 ease-in-out">
            <div>
              <h2 class="text-2xl font-semibold mb-2">{card.title}</h2>
              <p class="mb-8 text-sm text-accent-100">{card.description}</p>
            </div>
            <div class="mt-auto flex flex-col gap-2">
              <span
                class={`inline-block w-max text-xs px-3 py-1 rounded-full ${
                  card.hiring ? "bg-yellow-400 text-black" : "bg-gray-400"
                }`}
              >
                {card.hiring ? "Now Hiring" : "Not Hiring"}
              </span>

              {card.hiring && (
                <a
                  href={card.link}
                  target="_blank"
                  class="text-primary-300 hover:underline text-sm"
                >
                  Download Job Description
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section
    class="flex flex-col lg:flex-row items-center justify-center w-full bg-sky-500/20"
    id="application-form"
  >
    <div>
      <ImageComp
        imagePath="/src/assets/simplifly-student-pilot-flying-toward-sunset.jpg"
        imageAlt="simplifly student pilot flying toward the sunset"
        style="object-cover w-full h-full"
      />
    </div>
    <FormJobApplication />
  </section>

</BaseLayout>
